<div class="mt-80 mb80">

    {% if provider.photos[0].url is defined %}

    <div class="detail-banner" style="background-image: url({{ asset(provider.photos[0].url) }});">

        {% else %}
        <div class="detail-banner" >
            {% endif %}

        <div class="container">
            <div class="detail-banner-left">


                <h2 class="detail-title">
                    {{ provider.name }}
                </h2><br>

                <div class="detail-banner-info">

                    {% for categ in provider.serviceCategories %}

                        <a href="{{ path("service_category_detail", {"slug" : categ.slug}) }}">
                            <div class="detail-verified">{{ categ.name }}</div>
                        </a>

                    {% endfor %}

                </div><!-- /.detail-banner-info -->

            </div><!-- /.detail-banner-left -->
        </div><!-- /.container -->
    </div><!-- /.detail-banner -->

</div>